<Page x:Class="KursWpf.PageUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KursWpf"
      mc:Ignorable="d" 
      d:DesignHeight="612.072" d:DesignWidth="800"
      Title="PageUsers" Background="Black">


    <Grid Background="#FF282B3A">
        <Label Content="ВСЕ ИГРОКИ НА СЕРВЕРЕ" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" FontSize="24" Foreground="#FFB8A8A8" Height="42" Width="414" />

        <ListBox x:Name="AccountList" Background="{x:Null}" Margin="0,52,0,0" >
            <ListBox.ItemTemplate >
                <DataTemplate>

                    <StackPanel Margin="5" HorizontalAlignment="Left" Orientation="Horizontal" >
                        <!--<Image Width="100" Height="75" Source="{Binding Path=ImagePath}" />-->
                        <TextBlock FontSize="16" Text="{Binding Path=Login}" HorizontalAlignment="Center" Foreground="#FFF9EFEF" Margin="20,0,0,0" />
                        <TextBlock FontSize="16" Text="{Binding Path=GamerStatus}" HorizontalAlignment="Right" Margin="20,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Page>
